/** ANIMATIONS */
@keyframes zoom {
  0% {
    transform: translateY(-10px) scale(0.95);
    opacity: 0;
  }

  100% {
    transform: translateY(0) scale(1);
    opacity: 1;
  }
}

@keyframes fade {
  from { opacity: 0; }
  to   { opacity: 1; }
}

/** HINTS */
#vimium-hint-marker-container {
  animation: fade 60ms linear both;

  .internal-vimium-hint-marker {
    padding: 3px 4px;
    background: var(--primary);
    border: 1px solid var(--border);
    box-shadow: var(--box-shadow);
  }

  span {
    color: var(--bg-core);
    text-shadow: none;
  }

  .matchingCharacter {
    opacity: 0.4;

    ~ span {
      color: var(--bg-core);
    }
  }

  .vimiumActiveHintMarker {
    background: var(--match);

    span {
      color: var(--bg-core) !important;
    }
  }
}

/** VOMNIBAR */
#vomnibar {
  background: var(--bg-mantle);
  border: 1px solid var(--bg-surface);
  box-shadow: var(--box-shadow);
  animation: zoom 120ms cubic-bezier(0, 0, 0.2, 1) both;
  transform-origin: 50% 0%;
  will-change: transform, opacity;
  font-family: var(--font);

  #vomnibar-search-area {
    color: var(--fg-core);
    border-bottom: none;

    input {
      color: var(--fg-core);
      background: var(--bg-core);
      box-shadow: var(--bg-surface) 0px 0px 1px;
      &::before {
        content: "‚ùØ";
        position: absolute;
        left: 20px;
        z-index: 300;
        padding: 6px 0;
        font-weight: bold;
        font-size: var(--font-size);
        color: var(--secondary);
      }
    }
  }

  ul {
    margin: 0;
    padding: 0;
    background: var(--bg-core);
    border-top: 1px solid var(--strong-primary);
  }

  li {
    padding: 10px;
    border-bottom: 1px solid var(--border);
    font-size: var(--font-size);

    .top-half,
    .bottom-half {
      display: flex;
      padding: 2px 0;
    }

    .bottom-half {
      font-size: calc(var(--font-size) - 0.125rem);
    }

    .source {
      color: var(--strong-primary)
    }

    .title {
      color: var(--light-primary);
    }

    .url {
      overflow: hidden;
      color: var(--link);
      white-space: nowrap;
      text-overflow: ellipsis;
    }

    .match {
      color: var(--match);
      font-weight: normal;
    }

    .title .match {
      color: var(--accent);
    }

    &.selected {
      background-color: var(--bg-surface) !important;
      border-bottom: 1px solid transparent;
    }
  }
}

/** HUD */
#hud-container {
  background: var(--bg-mantle);
  border: none;
  box-shadow: var(--box-shadow);

  #hud.hud-find {
      display: flex;
  }

  span#hud-find-input {
    position: relative;
    width: 100%;

    &::before {
      position: sticky;
      left: 0;
      padding-right: 4px;
      color: var(--match);
      background: linear-gradient(
        90deg,
        var(--bg-mantle) 0%,
        var(--bg-mantle) 50%,
        transparent 100%
      );
    }
  }

  span#hud-find-input,
  #hud {
    color: var(--light-primary);
  }

  #hud-match-count {
    color: var(--accent);
    flex-shrink: 0;
    float: none;
    padding-left: 4px;
  }
}
